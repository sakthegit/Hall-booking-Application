<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".AdminHome">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/teal_200"
        android:id="@+id/tv1"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Request Received"
            android:padding="10dp"
            android:textSize="27sp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="sans-serif-medium"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/signout1"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/teal_200"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:src="@drawable/ic_baseline_exit_to_app_24"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:id="@+id/rv_request"
        android:layout_above="@id/accepted_btn"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"/>

    <Button

        android:id="@+id/accepted_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-black"
        android:textSize="16sp"
        android:textColor="@color/card_color"
        android:background="@drawable/rectangle"
        android:drawableRight="@drawable/ic_baseline_how_to_reg_24"
        android:text="Accepted Details" />


</RelativeLayout>